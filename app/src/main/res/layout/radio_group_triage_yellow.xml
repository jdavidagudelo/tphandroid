<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/triage_item_background">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableLayoutTrauma">
        <TableRow>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonTriageYellow"
                android:button="@null"
                android:background="@drawable/button_triage_yellow_fast"
                android:checked="false"
                android:layout_span="3" />
        </TableRow>
        <TableRow>

            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/dolor_toracico_text"
                android:id="@+id/radioButtonDolorToracico"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/arritmias_text"
                android:id="@+id/radioButtonArritmias"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>

            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:text="@string/hemorragias_controladas_text"
                android:id="@+id/radioButtonHemorragiasControladas"
                android:textSize="@dimen/triage_check_box_text_size"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
        </TableRow>
        <TableRow>
            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:text="@string/lesion_medular_dorsal_text"
                android:textSize="@dimen/triage_check_box_text_size"
                android:id="@+id/radioButtonLesionMedularDorsal"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>

            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:text="@string/glasgow913_text"
                android:textSize="@dimen/triage_check_box_text_size"
                android:id="@+id/radioButtonGlasgow913"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/alteracion_estado_conciencia_text"
                android:id="@+id/radioButtonAlteracionEstadoConciencia"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
        </TableRow>
        <TableRow>

            <CheckBox

                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/fracturas_mayores_text"
                android:id="@+id/radioButtonFracturasMayores"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:text="@string/quemaduras_moderadas_text"
                android:textSize="@dimen/triage_check_box_text_size"
                android:id="@+id/radioButtonQuemadurasModeradas"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>

            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/intoxicacion_triage_text"
                android:id="@+id/radioButtonIntoxicacionTriage"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>