<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identificacion_title_text"
            android:textAlignment="viewEnd"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <GridView
        android:layout_width="650dp"
        android:layout_height="220dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/gridViewDocumentTypes"
        android:numColumns="4"
        android:padding="10dip"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numero_documento_text"
            android:textAlignment="viewEnd"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/editTextNumeroDocumento"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editTextNumeroDocumento" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/editTextNumeroDocumento"
            android:background="@drawable/borders_edit_textbox"
            android:inputType="text"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/gridViewDocumentTypes"
            android:layout_alignRight="@+id/gridViewDocumentTypes"
            android:layout_alignEnd="@+id/gridViewDocumentTypes"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginLeft="20dp" />
</RelativeLayout>