<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableLayoutRitmoPulso">
        <TableRow>
            <TextView android:text="@string/evaluacion_c_ritmo_text"/>
        </TableRow>
        <TableRow>
            <RadioButton
                android:layout_width="@dimen/radio_button_width"
                android:layout_height="@dimen/radio_button_height"
                android:text="@string/ritmo_ritmico_text"
                android:id="@+id/radioButtonRitmoRitmico"
                android:background="@drawable/borders"
                android:checked="false"/>
        </TableRow>
        <TableRow>
            <RadioButton
                android:layout_width="@dimen/radio_button_width"
                android:layout_height="@dimen/radio_button_height"
                android:text="@string/ritmo_arritmicol_text"
                android:id="@+id/radioButtonRitmoArritmico"
                android:background="@drawable/borders"
                android:checked="false"/></TableRow>
    </TableLayout>
</RelativeLayout>