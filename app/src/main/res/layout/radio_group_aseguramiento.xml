<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableRow>
        <TextView
            android:text="@string/aseguramiento_title_text"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/aseguradora_text"/>
        <Spinner
            android:id="@+id/spinnerAseguradora"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"
            android:spinnerMode="dropdown">

        </Spinner>
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/eps_text"/>
        <Spinner
            android:id="@+id/spinnerEps"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"
            android:spinnerMode="dropdown">
        </Spinner>
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/arp_text"/>
        <Spinner
            android:id="@+id/spinnerArp"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"
            android:spinnerMode="dropdown">
        </Spinner>
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/plan_beneficios_text"/>
        <Spinner
            android:id="@+id/spinnerPlanBeneficios"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"
            android:spinnerMode="dropdown">
        </Spinner>
    </TableRow>
    </TableLayout>