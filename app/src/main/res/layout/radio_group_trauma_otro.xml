<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableLayoutTraumaOtro">
        <TableRow>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="@dimen/radio_button_height"
                android:text="@string/otro_trauma_text"
                android:id="@+id/radioButtonOtroTrauma"
                android:background="@drawable/borders"
                android:checked="false"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/radio_button_height"
                android:text="@string/cual_otro_trauma_text"
                android:id="@+id/textViewCualOtroTrauma"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:layout_width="@dimen/edit_text_width"
                android:layout_height="@dimen/edit_text_height"
                android:id="@+id/editTextCualOtroTrauma"
                android:background="@drawable/borders_edit_textbox"
               />
        </TableRow>
        </TableLayout>
    </RelativeLayout>