<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/triage_item_background">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableLayoutTrauma">
        <TableRow>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonTriageWhite"
                android:background="@drawable/button_triage_white_fast"
                android:button="@null"
                android:checked="false"
                android:layout_column="0"
                android:layout_span="3"/>

        </TableRow>
        <TableRow>
            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/cadena_custodia_text"
                android:id="@+id/radioButtonCadenaCustodia"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
            <CheckBox
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height"
                android:textSize="@dimen/triage_check_box_text_size"
                android:text="@string/entregado_entidad_text"
                android:id="@+id/radioButtonEntregadoEntidad"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
            <Space
                android:layout_width="@dimen/triage_checkbox_width"
                android:layout_height="@dimen/triage_checkbox_height">

            </Space>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/entidad_text"
                android:layout_span="3"/>
            </TableRow>
        <TableRow>
            <EditText
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:layout_width="wrap_content"
                android:id="@+id/editTextEntidadRecepcionDifunto"
                android:background="@drawable/borders_edit_textbox"
                android:inputType="text"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/nombre_persona_recepcion_text"
                android:layout_span="3"/>

        </TableRow>
        <TableRow>
            <EditText
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:layout_width="wrap_content"
                android:id="@+id/editTextNombrePersonaRecepcion"
                android:background="@drawable/borders_edit_textbox"
                android:inputType="text"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"
                />
            </TableRow>
        <TableRow>
            <TextView
                android:text="@string/registro_persona_recepcion_text"
                android:layout_span="3"/>
            </TableRow>
        <TableRow>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_span="3"
                android:id="@+id/editTextRegistroPersonaRecepcion"
                android:background="@drawable/borders_edit_textbox"
                android:inputType="text"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>