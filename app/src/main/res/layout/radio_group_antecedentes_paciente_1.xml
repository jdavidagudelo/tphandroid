<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableRow>
        <TextView
            android:text="@string/tipo_antecedente_title_text"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>

        <GridView
            android:layout_width="750dp"
            android:layout_height="400dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/gridViewAntecedentType"
            android:numColumns="3"
            android:padding="10dip"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:layout_span="3" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="@string/descripcion_antecedente_text"
            android:layout_span="3"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"/>
    </TableRow>
    <TableRow>
        <EditText
            android:layout_height="@dimen/descripcion_antecedente_edit_text_height"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"
            android:id="@+id/editTextDescripcionAntecedente"
            android:background="@drawable/borders_edit_textbox"
            android:inputType="text"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/year_antecedente_text"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:layout_marginLeft="@dimen/checkbox_triage_margin"
            android:layout_marginRight="@dimen/checkbox_triage_margin"
            android:layout_marginTop="@dimen/checkbox_triage_margin"
            android:layout_marginBottom="@dimen/checkbox_triage_margin"
            android:id="@+id/editTextYearAntecedente"
            android:background="@drawable/borders_edit_textbox"
            android:inputType="textMultiLine"/>
        </LinearLayout>
        <Button
            android:text="@string/add_antecedente_text"
            />
    </TableRow>
</TableLayout>