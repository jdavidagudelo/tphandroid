<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal|vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical" >


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_placa_ambulancia"
                        android:id="@+id/textViewPlacaAmbulancia"
                        android:textSize="16dp"
                        android:textColor="#ff000000"
                        android:layout_column="0"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:id="@+id/editTextPlacaAmbulancia"
                        android:height="@dimen/edit_text_height"
                        android:layout_column="1"
                        android:background="@drawable/borders_edit_textbox"
                        android:layout_span="3"
                        android:inputType="text" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_entidad_responsable"
                        android:id="@+id/textViewEntidadResponsable"
                        android:textSize="16dp"
                        android:textColor="#ff000000"
                        android:layout_column="0" />

                    <Spinner
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerEntidadResponsable"
                        android:layout_column="1"
                        android:layout_span="3" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_entidades_apoyo"
                        android:id="@+id/textView14"
                        android:layout_column="0"
                        android:textSize="16dp"
                        android:textColor="#ff000000" />
                </TableRow>
                <TableRow>

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButtonNone1"
                        android:src="@drawable/accept"
                        android:layout_span="1" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButtonNone"
                        android:src="@drawable/accept" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton6"
                        android:src="@drawable/accept" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton7"
                        android:src="@drawable/accept"/>
                </TableRow>
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>