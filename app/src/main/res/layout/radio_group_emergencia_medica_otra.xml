<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableLayoutEmergenciaMedicaOtra">

            <RadioButton
                android:layout_width="@dimen/radio_button_emergencia_width"
                android:layout_height="@dimen/radio_button_height"
                android:text="@string/otra_emergencia_text"
                android:id="@+id/radioButtonOtraEmergencia"
                android:background="@drawable/checkbox_triage"
                android:checked="false"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/radio_button_height"
                android:text="@string/cual_otra_emergencia_text"
                android:id="@+id/textViewCualOtraEmergencia"
                android:textSize="20dp"/>
          <EditText
                android:layout_width="@dimen/edit_text_width"
                android:layout_height="@dimen/radio_button_height"
                android:id="@+id/editTextCualOtraEmergencia"
                android:background="@drawable/borders_edit_textbox"
              android:inputType="textMultiLine"
                android:layout_marginLeft="@dimen/checkbox_triage_margin"
                android:layout_marginRight="@dimen/checkbox_triage_margin"
                android:layout_marginTop="@dimen/checkbox_triage_margin"
                android:layout_marginBottom="@dimen/checkbox_triage_margin"
               />
       </LinearLayout>