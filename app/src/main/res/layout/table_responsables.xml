<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableSignosVitales">
        <TableRow
            android:background="@color/signos_vitales_table_header_background">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/signos_vitales_table_header_text_color"
                android:layout_column="1"
                android:id="@+id/textViewRegistroResponsableHeader"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/signos_vitales_text_size"
                android:background="@drawable/cell_shape"

                android:text="@string/text_view_registro_responsable_header_text"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:textColor="@color/signos_vitales_table_header_text_color"
                android:id="@+id/textViewNombresResponsableTableHeader"
                android:textSize="@dimen/signos_vitales_text_size"
                android:background="@drawable/cell_shape"
                android:text="@string/text_view_nombres_responsable_header_text"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="3"
                android:id="@+id/textViewApellidosResponsableTableHeader"
                android:textSize="@dimen/signos_vitales_text_size"
                android:background="@drawable/cell_shape"
                android:textColor="@color/signos_vitales_table_header_text_color"
                android:text="@string/text_view_apellidos_responsable_header_text"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="4"
                android:id="@+id/textViewControlAphTableHeader"
                android:textSize="@dimen/signos_vitales_text_size"
                android:background="@drawable/cell_shape"
                android:textColor="@color/signos_vitales_table_header_text_color"
                android:text="@string/text_view_control_aph_header_text"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_column="5"
                android:id="@+id/textViewExternoTableHeader"
                android:textSize="@dimen/signos_vitales_text_size"
                android:background="@drawable/cell_shape"
                android:textColor="@color/signos_vitales_table_header_text_color"
                android:text="@string/text_view_externo_header_text"/>

        </TableRow>
    </TableLayout>
</ScrollView>